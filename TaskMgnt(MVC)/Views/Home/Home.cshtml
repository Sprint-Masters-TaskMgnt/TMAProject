    <style>
        /* General Reset */
        * {
            margin: 0px;
            padding: 0px;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            background-color: #f9f9f9;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px 50px;
            background-color: #202020;
            color: #fff;
        }

            header .logo h1 {
                font-size: 2rem;
                color: #e50914;
            }

            header .options select,
            header .options button {
                margin-left: 10px;
                padding: 10px;
                border: none;
                border-radius: 5px;
                font-size: 1rem;
            }

            header .options button {
                background-color: #e50914;
                color: #fff;
                cursor: pointer;
            }

        .section {
            text-align: center;
            padding: 250px 20px;
            background: url('https://img.freepik.com/premium-photo/modern-black-leather-workspace-with-accessories-wireless-keyboard-copy-space-top-view_67155-19498.jpg') ;
            background-repeat:no-repeat;
            background-size:cover;
            color: white;
            position: relative; /* Ensure the parent section is positioned */
        }

            .section h1 {
                font-size: 3rem;
                margin-top: -50px;
                margin-bottom: 20px;
                color: white;
                opacity: 1;
            }

            .section p {
                font-size: 1.2rem;
                color: white;
                margin-top: 10px;
                text-align: center; /* Center the paragraph text */
            }

        .mail {
            margin-top: 20px;
        }

            .mail input {
                padding: 10px;
                width: 300px;
                border: none;
                border-radius: 5px;
            }

            .mail button {
                padding: 10px 20px;
                margin-left: 10px;
                border: none;
                background-color: #e50914;
                color: #fff;
                font-size: 1rem;
                border-radius: 5px;
                cursor: pointer;
            }

        .line {
            height: 2px;
            background-color: #ddd;
            margin: 40px 0;
        }

        .content-section {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 50px;
        }

            .content-section .content {
                flex: 1;
                padding: 20px;
            }

                .content-section .content h1 {
                    font-size: 2rem;
                    margin-bottom: 10px;
                }

                .content-section .content p {
                    font-size: 1rem;
                    line-height: 1.8;
                }

            .content-section img {
                flex: 1;
                max-width: 100%;
                height: 500px;
                border-radius: 10px;
            }

        .footer {
            background-color: #202020;
            color: #999;
            text-align: center;
            padding: 40px;
        }

            .footer a {
                color: #e50914;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
