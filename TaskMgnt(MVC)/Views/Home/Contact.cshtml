@{
    ViewBag.Title = "Hello there!";
    ViewBag.Message = "Know more about us ";
}

<style>
    /* Apply the background image to the body or main container */
    body {
        background-image: url('https://img.freepik.com/free-photo/flat-lay-workstation-with-copy-space-laptop_23-2148430879.jpg');
        background-size: cover; /* Ensures the image covers the entire page */
        background-position: center; /* Centers the background image */
        background-attachment: fixed; /* Fixes the image position on scroll */
        color: white; /* Adjust text color for visibility */
    }

    * {
        margin: 0px;
        padding: 0px;
        box-sizing: border-box;
    }

    /* Optional: Adjust the content container */
    main {
        background-color: rgba(0, 0, 0, 0.5); /* Add a slight transparent background to improve text readability */
        padding: 20px;
        border-radius: 8px;
    }
</style>

<main aria-labelledby="title" class="container mt-4">
    <h2 id="title" class="text-primary">@ViewBag.Title</h2>
    <h3 class="text-secondary">@ViewBag.Message</h3>

    <p>If you have any questions, suggestions, or need assistance, feel free to reach out to us!</p>

