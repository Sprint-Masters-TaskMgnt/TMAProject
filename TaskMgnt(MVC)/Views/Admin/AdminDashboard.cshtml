    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            margin: 0;
            height: 100vh;
            background-image: url("https://www.cumminsandwhite.com/wp-content/uploads/2017/03/Black-Desk-Background.jpg");
            background-repeat: no-repeat;
            background-size: cover;
            font-family: Arial, sans-serif;
        }

        .menu {
            display: grid;
            grid-template-columns: repeat(4, 1fr); /* 3 items per row */
            gap: 20px;
            padding: 40px 100px;
        }

        .card1 {
            width: 180px;
            text-align: center;
            margin: 0 auto;
            padding: 10px;
            background: rgba(255, 255, 255, 0.8);
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .tumbnail > img {
            height: 140px;
            width: 100%;
            border-radius: 15px;
        }

        .desc {
            margin-top: 10px;
        }

            .desc > a {
                display: inline-block;
                padding: 10px 20px;
                background-color: #007bff;
                color: white;
                text-decoration: none;
                border-radius: 5px;
                font-weight: bold;
                transition: background-color 0.3s ease;
            }

                .desc > a:hover {
                    background-color: #0056b3;
                }
    </style>
</head>
