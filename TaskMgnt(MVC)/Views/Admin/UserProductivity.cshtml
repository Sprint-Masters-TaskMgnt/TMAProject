<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Task Report</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 20px;
        }

        #reportForm {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2);
            max-width: 400px;
            width: 100%;
            position: relative;
            top: 100px;
            left: 400px;
        }

        h2 {
            color: #2c3e50;
        }

        .form-group {
            margin: 15px 0;
            text-align: left;
        }

            .form-group label {
                font-weight: bold;
                display: block;
                margin-bottom: 5px;
            }

            .form-group input {
                width: calc(100% - 20px);
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 5px;
                font-size: 16px;
            }

        button {
            background-color: #3498db;
            color: white;
            padding: 10px;
            width: 100%;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }

            button:hover {
                background-color: #2980b9;
            }

        #message {
            margin-top: 20px;
            color: red;
        }

        h1 {
            text-align: center;
            color: navy;
        }

        form {
            text-align: center;
            margin-bottom: 20px;
        }

            form label {
                font-size: 1.2rem;
            }

            form input {
                margin-left: 10px;
                padding: 8px;
                font-size: 1rem;
                width: 250px;
            }

            form button {
                padding: 10px 20px;
                font-size: 1rem;
                background-color: navy;
                color: white;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }

                form button:hover {
                    background-color: darkblue;
                }

        .report-container {
            display: flex;
            gap: 20px;
            margin-top: 20px;
        }

        .user-details,
        .tasks {
            background: #ffffff;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .user-details {
            width: 30%;
        }

        .tasks {
            flex: 1;
        }

        .tasks-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .task-box {
            background: #f9f9f9;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            width: calc(50% - 20px); /* Two columns */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .task-box strong {
                display: block;
                margin-bottom: 5px;
            }

        #downloadButtonContainer {
            text-align: center;
            margin-top: 20px;
        }

        #downloadReportBtn {
            padding: 10px 20px;
            font-size: 1rem;
            background-color: green;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            #downloadReportBtn:hover {
                background-color: darkgreen;
            }
    </style>
</head>
<body>

    <div id="reportForm">
        <h2>User Productivity Report</h2>
        <div class="form-group">
            <label for="userId">Enter User ID:</label>
            <input type="number" id="userId" placeholder="User ID" required>
        </div>
        <button onclick="downloadUserReport()">Download Report</button>
        <div id="message"></div>
    </div>

    <script>
        function downloadUserReport() {
            const userId = document.getElementById("userId").value;
            const message = document.getElementById("message");

            // Reset message display
            message.textContent = "";

            if (!userId) {
                message.textContent = "Please enter a valid User ID.";
                return;
            }

            // Make AJAX request to download the report
            fetch(`https://localhost:7071/api/UserTaskReport/UserProductivityReport/${userId}`, {
                method: 'GET'
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error("User not found or no tasks available for this user.");
                    }
                    return response.blob(); // Convert response to blob for file download
                })
                .then(blob => {
                    // Create a link element and trigger the download
                    const link = document.createElement("a");
                    link.href = window.URL.createObjectURL(blob);
                    link.download = `User_${userId}_Productivity_Report.txt`;
                    link.click();
                })
                .catch(error => {
                    message.textContent = error.message;
                });
        }
    </script>
</body>
</html>