<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Productivity Report</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        #reportForm {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2);
            max-width: 400px;
            width: 100%;
            text-align: center;
        }

        h2 {
            color: #2c3e50;
        }

        .form-group {
            margin: 15px 0;
            text-align: left;
        }

            .form-group label {
                font-weight: bold;
                display: block;
                margin-bottom: 5px;
            }

            .form-group input {
                width: calc(100% - 20px);
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 5px;
                font-size: 16px;
            }

        button {
            background-color: #3498db;
            color: white;
            padding: 10px;
            width: 100%;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }

            button:hover {
                background-color: #2980b9;
            }

        #message {
            margin-top: 20px;
            color: red;
        }
    </style>
</head>
<body>

    <div id="reportForm">
        <h2>User Productivity Report</h2>
        <div class="form-group">
            <label for="userId">Enter User ID:</label>
            <input type="number" id="userId" placeholder="User ID" required>
        </div>
        <button onclick="downloadUserReport()">Download Report</button>
        <div id="message"></div>
    </div>

    <script>
        function downloadUserReport() {
            const userId = document.getElementById("userId").value;
            const message = document.getElementById("message");

            // Reset message display
            message.textContent = "";

            if (!userId) {
                message.textContent = "Please enter a valid User ID.";
                return;
            }

            // Make AJAX request to download the report
            fetch(`https://localhost:7071/api/UserTaskReport/UserProductivityReport/${userId}`, {
                method: 'GET'
            })
            .then(response => {
                    if (!response.ok) {
                        throw new Error("User not found or no tasks available for this user.");
                    }
                    return response.blob(); // Convert response to blob for file download
                })
            .then(blob => {
                // Create a link element and trigger the download
                const link = document.createElement("a");
                link.href = window.URL.createObjectURL(blob);
                link.download = User_${ userId } _Productivity_Report.txt;
                link.click();
            })
            .catch(error => {
                message.textContent = error.message;
            });
        }
    </script>

</body>
</html>